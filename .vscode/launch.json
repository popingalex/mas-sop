{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Judge Integration Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-m", "integration",
                "-v",
                "-s",
                "tests/agents/test_integration_judge.py"
            ],
            "python": "${workspaceFolder}/venv/bin/python",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false,
            "console": "integratedTerminal",
            "purpose": ["debug-test"]
        }
    ]
} 